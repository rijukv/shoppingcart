<section>
<div class="container">
 <div class="row mt-5">
<a href="/admin/add-product" class="btn btn-success">Add Product</a>
 </div>
    <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
       <td>{{this.Description}}</td>
        <td><img style="width:50px; height:50px" src="/product-images/{{this._id}}.jpg"</td>
         </tr>
     {{/each}}
  </tbody>
</table>
</div>

</section>